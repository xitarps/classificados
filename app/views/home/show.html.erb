<h2>Anuncios</h2>


<div>
  <ul>
    
    <% @ads.each do |ad| %>
      <li>
      <p>
        <strong>
          <%= ad.title %>
        </strong>
      </p>

      <p>
        <%= ad.description.truncate(10)%>
      </p>

      <p>
        <%= number_to_currency(ad.price, unit: "R$", separator: ",", delimiter: ".")  %>
      </p>
      </li>
    <% end %>
    
  </ul>
</div>